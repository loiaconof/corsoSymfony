{% extends 'base.html.twig' %}

{% block title %}All posts!{% endblock %}

{% block body %}
<div>
    {% if posts|length > 0 %}
        {% for post in posts %}
            <div>
                <a href="{{ path('app_micro_post_show', {post: post.id}) }}">
                    {{ post.title }}
                </a>
            </div>
        {% endfor %}
    {% else %}
        <div>There's nothing here yet!</div>
    {% endif %}
</div>
{% endblock %}
